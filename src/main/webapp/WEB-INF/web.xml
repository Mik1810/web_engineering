<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/webmarket</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.modules_directory</param-name>
        <param-value>modules/</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <!--This doesn't work, i don't know why-->
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy</param-value><!-- hh:mm:ss -->
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.webmarket.framework.application.ApplicationInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoria_padre</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.CategoriaPadreController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoria_figlio</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.CategoriaFiglioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoria_nipote</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.CategoriaNipoteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_uffici</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.GestioneUfficiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ordinante</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.ordinante.OrdinanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>crea_richiesta</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.ordinante.CreaRichiestaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>richieste</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.ordinante.RichiesteOrdinanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>caratteristiche_richiesta</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.ordinante.CaratteristicheRichiestaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_stati</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.GestioneStatiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_tecnici_ordini</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.GestioneTecniciOrdiniController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_tecnici_preventivi</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.GestioneTecniciPreventiviController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gestione_ordinanti</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.amministratore.GestioneOrdinantiController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.TestController</servlet-class>
    </servlet>
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>
            <!-- admin -->
            /admin,
            /gestione_uffici,
            /categoria_padre,
            /categoria_figlio,
            /categoria_nipote,
            /gestione_stati,
            /gestione_ordinanti,
            /gestione_tecnici_preventivi,
            /gestione_tecnici_ordini,

            <!-- ordinante -->
            /ordinante,
            /crea_richiesta,
            /richieste,
            /caratteristiche
        </param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoria_padre</servlet-name>
        <url-pattern>/categoria_padre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_tecnici_preventivi</servlet-name>
        <url-pattern>/gestione_tecnici_preventivi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_tecnici_ordini</servlet-name>
        <url-pattern>/gestione_tecnici_ordini</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_uffici</servlet-name>
        <url-pattern>/gestione_uffici</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoria_figlio</servlet-name>
        <url-pattern>/categoria_figlio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoria_nipote</servlet-name>
        <url-pattern>/categoria_nipote</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ordinante</servlet-name>
        <url-pattern>/ordinante</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>crea_richiesta</servlet-name>
        <url-pattern>/crea_richiesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>richieste</servlet-name>
        <url-pattern>/richieste</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>caratteristiche_richiesta</servlet-name>
        <url-pattern>/caratteristiche</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_stati</servlet-name>
        <url-pattern>/gestione_stati</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gestione_ordinanti</servlet-name>
        <url-pattern>/gestione_ordinanti</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            <!-- 30 minuti-->
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webmarket</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>