<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/webmarket</param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.webmarket.framework.application.ApplicationInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homepage</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.HomepageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>secured</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.SecureController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>public</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.PublicController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>secured</servlet-name>
        <url-pattern>/secured</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homepage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>public</servlet-name>
        <url-pattern>/public</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>homepage</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            <!-- 30 minuti-->
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/webmarket</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>