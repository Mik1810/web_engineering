<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>data.source</param-name>
        <param-value>jdbc/webmarket</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.modules_directory</param-name>
        <param-value>modules/</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.webmarket.framework.application.ApplicationInitializer</listener-class>
    </listener>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.TestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoria_padre</servlet-name>
        <servlet-class>it.univaq.webmarket.application.controller.CategoriaPadreController</servlet-class>
    </servlet>
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/admin, /categoria_padre</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoria_padre</servlet-name>
        <url-pattern>/categoria_padre</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            <!-- 30 minuti-->
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webmarket</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>